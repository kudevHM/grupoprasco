<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="requisition_purchase_wizard_form">
        <field name="name">requisition.purchase.wizard.wizard</field>
        <field name="model">requisition.purchase.wizard</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form create="false" >
                <header>
                    <button name="validate_vobo" string="VoBo" type="object" states="vobo" class="oe_highlight" />
                    <button name="create_purchase_order" string="Solicitar Orden de compra" type="object" states="valid" class="oe_highlight" groups="custom_requisitions.requisitions_manager" />
                    <field name="state" widget="statusbar" statusbar_visible="draft,valid,finished,cancel" />                
                </header>
                <sheet>
                    <div class="oe_title">
                        <div class="oe_title">
							<h1>
								<field name="name" readonly="1"/><br/>
							</h1>
                    	</div>
					</div>
                    <group>
                        <group>
                            <field name="job_id"  readonly="1"/>
                            <field name="supplier_id" readonly="1"/>    
                        </group>
                        <group>
                            <field name="responsible"  widget="many2many_tags" readonly="1"/> 
                            <field name="picking_type_id" readonly="1"/>     
                        </group>

                    </group> 
                    <notebook>
                        <page string="Materiales">
                            <field name="req_lines_ids" nolabel="1" attrs="{'readonly':[('state', '=', 'finished')]}">
                                <tree editable="bottom" create="false" delete="false" decoration-success="pr_active==True">
                                    <field name="product_id" readonly="1" />
                                    <field name="name" readonly="1" />
                                    <field name="job_type_id" readonly="1"/>
									<field name="reference" readonly="1"/>
                                    <field name="date_planned" readonly="1" />
                                    <field name="planned_quantity" readonly="1"/>
                                    <field name="available_qty" readonly="1"/>
                                    <!-- <field name="requisition_line_qty" readonly="1"/> -->
                                    <field name="qty" widget="integer" />
                                    
                                    <field name="price_unit"  invisible="1"/>
                                    <field name="price_after" invisible="1"/>
                                    <field name="product_uom_id"  invisible="1"/>
                                    <field name="req_model_line_id"  invisible="1"/>
                                    <field name="pr_active"  invisible="1" widget="boolean_toggle"/>

                                </tree>
                            </field>
                        </page>
                    </notebook>
                    <footer> 
                        <button name="write" type="object"  states="draft" string="Save" class="oe_rigth oe_button_box"/>    
                        <button name="unlink"  states="draft" type="object" string="Cancel" class="oe_rigth"/>
                        <!-- <button name="unlink"  states="draft" string="Cancel" special="cancel" class="oe_link"/> -->
                    </footer>
                </sheet>
            </form>
        </field>
    </record>
  
    <record id="custom_requisitions_requisition_purchase_tree_view" model="ir.ui.view">
		<field name="name">requisition.purchase.wizard.tree</field>
		<field name="model">requisition.purchase.wizard</field>
        <field name="priority" eval="1"/>
		<field name="arch" type="xml">
			<tree string="Requisiciones">
				<field name="name" />
				<field name="job_id" />
                <field name="job_name"/>
				<field name="supplier_id"/>
				<field name="responsible" />
				<field name="picking_type_id" />
			</tree>
		</field>
	</record>
    <record id="custom_requisitions_requisition_purchase_search" model="ir.ui.view">
		<field name="name">custom_requisitions_requisition_purchase_search</field>
		<field name="model">requisition.purchase.wizard</field>
		<field name="arch" type="xml">
			<search string="Search requisition line">
				<field name="job_id"/>
				<field name="supplier_id"/>
				<field name="responsible"/>
				<field name="state"/>
				
				<filter string="Mis lineas de requisiciones" name="my_line_requisitions" domain="[('responsible', '=', uid)]"/>
				<group expand="0" string="Group By">
					<filter string="Responsible" name="responsible" context="{'group_by':'responsible'}"/>
					<filter string="Project" name="job_id" context="{'group_by':'job_id'}"/>
					<filter string="State" name="state" context="{'group_by':'state'}"/>
				</group>
			</search>
		</field>
	</record>
    <record model="ir.actions.act_window" id="action_requisition_purchase_wizard">
        <field name="name">Requisicion</field>
        <field name="res_model">requisition.purchase.wizard</field>
        <field name="view_type">form</field>
		<field name="domain">['|', ('responsible','=',uid), ("admin_user", "=", uid)]</field>
		<field name="context"> {"search_default_my_line_requisitions": 1} </field>
        <field name="view_mode">tree,form</field>
    </record>
    
    <menuitem id="menu_job_cost_project_requisition_line" name="Lineas de Requisicion " parent="custom_requisitions.menu_job_cost_project_requisition_menu" action="action_requisition_purchase_wizard" sequence="2" />
</odoo>
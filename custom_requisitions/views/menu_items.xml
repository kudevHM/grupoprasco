<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Menu Categorias -->
	<record id="material_cat_form_view_tree" model="ir.ui.view">
		<field name="name">material.categoria.tree</field>
		<field name="model">material.categoria</field>
		<field name="arch" type="xml">
			<tree string="Categorias">
                    <field name="name"/>
			</tree>
		</field>
	</record>
	<record id="categorias_form_view" model="ir.ui.view">
		<field name="name">material.categoria.form</field>
		<field name="model">material.categoria</field>
		<field name="arch" type="xml">
			<form string="Categorias">
                <sheet>
                    <group  colspan="4" >
                        <field name="name"/>
                    </group>
                </sheet>
			</form>
		</field>
	</record>    
    <!-- Menu subCategorias -->
	<record id="material_subcat_form_view_tree" model="ir.ui.view">
		<field name="name">material.subcategoria.tree</field>
		<field name="model">material.subcategoria</field>
		<field name="arch" type="xml">
			<tree string="SubCategorias">
                    <field name="name"/>
                    <field name="cat_id"/>
			</tree>
		</field>
	</record>
	<record id="subcategorias_form_view" model="ir.ui.view">
		<field name="name">material.subcategoria.form</field>
		<field name="model">material.subcategoria</field>

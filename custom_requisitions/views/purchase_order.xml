<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="Purchase_order_form_inherit" model="ir.ui.view">
		<field name="name">purchase.order.form.inherit</field>
		<field name="model">purchase.order</field>
		<field name="inherit_id" ref="purchase.purchase_order_form" />
		<field name="arch" type="xml">
			<xpath expr="//sheet/group/group" position="after">
				<group>
					<field name="name" force_save="1" />
					<field name="project_id" force_save="1" />
					<field name="project_name"/>
				</group>
				<group>
					<field name="client_id" force_save="1" />
					<field name="Responsible" force_save="1" />
				</group>
			</xpath>
            <xpath expr="//notebook/page/field[@name='order_line']/tree/field[@name='price_unit']" position="attributes">
                <attribute name="string">Precio Anterior</attribute>
                <attribute name="readonly">1</attribute>
            </xpath>
            <xpath expr="//notebook/page/field[@name='order_line']/tree/field[@name='taxes_id']" position="after">
				<field name="price_after" force_save="1" />
            </xpath>            
		</field>
	</record>
</odoo>
